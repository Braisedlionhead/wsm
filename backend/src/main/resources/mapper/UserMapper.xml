<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bld.katana.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bld.entity.User">
        <id column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="nick_name" property="nickName" />
        <result column="password" property="password" />
        <result column="age" property="age" />
        <result column="sex" property="sex" />
        <result column="phone" property="phone" />
        <result column="role_id" property="roleId" />
        <result column="is_valid" property="isValid" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, user_name, nick_name, password, age, sex, phone, role_id, is_valid
    </sql>


    <select id="pageC" resultType="com.bld.entity.User">
        select * from user
    </select>

    <select id="getNoTeamUser" resultType="com.bld.entity.User4Team">
        SELECT user_id, user_name
        FROM user
        WHERE team_id IS NULL
        LIMIT #{limit}
    </select>

</mapper>
